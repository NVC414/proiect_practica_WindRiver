<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <Space
        android:id="@+id/topSpace"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clearChatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Chat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:background="@color/primary"
        android:textColor="@color/on_primary" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topSpace"
        app:layout_constraintBottom_toTopOf="@id/chatInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp" />

    <LinearLayout
        android:id="@+id/chatInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/surface"
        app:layout_constraintBottom_toTopOf="@id/bottomSpace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/micButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/primary"
            android:src="@android:drawable/ic_btn_speak_now"
            app:tint="@color/on_primary"
            android:contentDescription="Microphone" />

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Type a message..."
            android:background="@drawable/chat_input_bg"
            android:padding="8dp"
            android:maxLines="4"
            android:textColor="@color/black"
            android:textColorHint="@color/on_surface" />

        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/primary"
            android:src="@android:drawable/ic_menu_send"
            app:tint="@color/on_primary"
            android:contentDescription="Send" />
    </LinearLayout>

    <Space
        android:id="@+id/bottomSpace"
        android:layout_width="0dp"
        android:layout_height="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
