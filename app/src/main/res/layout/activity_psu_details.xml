<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="24dp">

    <Space
        android:layout_width="match_parent"
        android:layout_height="87dp" />

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="start"
        android:background="@drawable/roundedcorners"
        android:contentDescription="@string/back"
        android:src="@android:drawable/ic_menu_revert"
        app:tint="@color/on_surface"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/psuImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@color/surface"
        android:scaleType="centerCrop"
        android:contentDescription="@string/psu_image" />

    <TextView
        android:id="@+id/psuName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:textColor="@color/on_background" />

    <TextView
        android:id="@+id/psuPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/on_surface"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/psuType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textColor="@color/on_surface" />

    <TextView
        android:id="@+id/psuColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textColor="@color/on_surface" />

    <TextView
        android:id="@+id/psuEfficiency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textColor="@color/on_surface" />

    <TextView
        android:id="@+id/psuModular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textColor="@color/on_surface" />

    <TextView
        android:id="@+id/psuWattage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="@color/on_surface" />

    <Button
        android:id="@+id/buttonAddToCart"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/add_to_cart"
        android:textSize="16sp"
        android:background="@drawable/rounded_button_bg"
        android:backgroundTint="@color/primary"
        android:textColor="@color/on_primary"
        android:layout_marginTop="24dp" />

</LinearLayout>
